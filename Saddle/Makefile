OBJECTS += $(OBJDIR)/Application.o
OBJECTS += $(OBJDIR)/Circle.o
OBJECTS += $(OBJDIR)/GameObject.o
OBJECTS += $(OBJDIR)/Log.o
OBJECTS += $(OBJDIR)/Sound.o
OBJECTS += $(OBJDIR)/Text.o
OBJECTS += $(OBJDIR)/UIElement.o
