# File sets
# #############################################

GENERATED :=
OBJECTS :=

GENERATED += $(OBJDIR)/Application.o
GENERATED += $(OBJDIR)/Circle.o
GENERATED += $(OBJDIR)/GameObject.o
GENERATED += $(OBJDIR)/Log.o
GENERATED += $(OBJDIR)/Sound.o
